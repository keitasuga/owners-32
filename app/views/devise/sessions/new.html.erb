<div class="container signup_login_content text-center">
  <div class="text-center mb-3">
    <div class="container-fluid">
     <div class="row">
       <div class="col"></div>
     </div>
    </div>
  </div>
  <div class="card" style="width: 18rem;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="card-header">
      オーナープランの申し込みにはログインが必要です
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Facebookでログインする</li>
      <li class="list-group-item">
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス"%>
        </div>
      </li>
      <li class="list-group-item">
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder:"パスワード"%>
        </div>
      </li>
      <li class="list-group-item">
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      </li>
    </ul>
    <% end %>
  </div>
  <div class="form-login-group d-none d-lg-block">
    <h5>会員でない方はこちら</h5>
    <a href="/owners/login" class="button"><%= render "devise/shared/links" %></a>
  </div>
</div>

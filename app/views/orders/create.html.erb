<div class="d-none d-lg-block flow">
  <div class="d-flex justify-content-center align-items-center w-100 progress_header">
    <div class="d-flex justify-content-start progress_arrow">
      <div class="done"> 1. コース選択 </div>
      <div class="arrow_right_done"></div>
      <div class="done"> 2. お届け先の指定 </div>
      <div class="arrow_right_done"></div>
      <div class="done"> 3. 申し込み内容・お届け先の確認 </div>
      <div class="arrow_right_done"></div>
      <div class="done"> 4. お支払い </div>
      <div class="arrow_right_done"></div>
      <div class="wip"> 5. 完了 </div>
      <div class="arrow_right_wip"></div>
    </div>
  </div>
</div>

<div class="purchase_title d-none d-lg-block">
  <div class="title mx-auto text-nowrap"> 完了 </div>
</div>

<div class="purchase_guide_message d-none d-lg-block">
  <div class="title mx-auto text-center"> 注文を完了しました </div>
</div>

<div class="container-fluid select_course_container">
  <div class="row justify-content-md-center center">
    <div class="col-md-auto d-none d-lg-block left">
      <div class="card">
        <img class="card-img-top" src="<%= @plan.img_url %>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= @plan.title %></h5>
        <div class="d-flex justify-content-lg-between justify-content-end card_footer">
          <div class="location d-lg-inline-block">
           <img class="location_icon" src="https://d1xgtamobon6ik.cloudfront.net/static/images/index/icon-location.svg" alt="location_icon"> <%= @plan.area %> </div>
           <div class="price"> 13,200円 </div>
         </div>
        </div>
      </div>
    </div>
    <div class="col right m-0 p-0">
      <table class="address_table">
        <tbody>
          <tr>
            <th class="course_info hidden_on_sp"> コース名/価格/口数 </th>
            <th class="hidden_on_sp"> お届け先 </th>
          </tr>
          <tr>
            <td class="course_info hidden_on_sp align-top">
              <h3><%= @course.name %></h3>
              <div class="d-flex justify-content-between price">
                <div> <%= @course.price %>円 </div>
                <div><%= @order.quantity %>口
                </div>
              </div>
            </td>
            <td class="align-top address_info">
              <div class="p-0 m-0 address_container">
                <span><%= @address.full_name %> 様</span>
                <p>〒<%= @address.postal_code.insert(3,"-") %> <%= @address.prefecture %> <%= @address.city %><br><%= @address.house_number %></p>
              </div>
            </td>
          </tr>
          <tr class="d-block d-lg-none separator">
            <td></td>
          </tr>
        </tbody>
      </table>
      <div class="selected_course_sum d-none d-lg-block left">
        <div class="tax_shipping_fee">(税・送料込み)</div>
        <div class="sum_title">合計</div>
        <div class="sum" id="sum"><%= @course.price * @order.quantity %> 円</div>
        <hr>
      </div>
    </div>
  </div>
  <div class="row d-none d-lg-block">
    <div class="col p-0 d-flex justify-content-end">
      <%= link_to root_path, class:"white" do %>
        ホームへ戻る
      <% end %>
        <i class="arrow_left_green"></i>
    </div>
  </div>
</div>
